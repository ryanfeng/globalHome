        script.
            $(".con-arraw").mouseenter(function () {
                $(this).attr("src", "./images/bus/bus-v8-2.png");
            })
            $(".con-arraw").mouseout(function () {
                $(this).attr("src", "./images/bus/bus-v8-1.png");
            })
            new Vue({
                el: ".bus-con8",
                data: {
                    listImage: [
                        "./images/bus/bus-v8-bg1.png",
                        "./images/bus/bus-v8-bg2.png",
                        "./images/bus/bus-v8-bg3.png"
                    ],
                    active: {
                        index: 0,
                        url: "./images/bus/bus-v8-bg1.png"
                    }
                },
                methods: {
                    nextUrl: function (index) {
                        if (this.listImage.length == (index + 1)) {
                            this.active = {
                                index: 0,
                                url: this.listImage[0]
                            }
                        } else {
                            this.active = {
                                index: index + 1,
                                url: this.listImage[index + 1]
                            }
                        }
                    },
                    lastUrl: function (index) {
                        if (index == 0) {
                            this.active = {
                                index: this.listImage.length - 1,
                                url: this.listImage[this.listImage.length - 1]
                            }
                        } else {
                            this.active = {
                                index: index - 1,
                                url: this.listImage[index - 1]
                            }
                        }
                    }
                }
            })
            new Vue({
                el: ".bus-con10",
                data: {
                    listImage: [
                        "./images/bus/bus-v10-bg1.png",
                        "./images/bus/bus-v10-bg3.png",
                        "./images/bus/bus-v10-bg4.png",
                        "./images/bus/bus-v10-bg5.png"
                    ],
                    active: {
                        index: 0,
                        url: "./images/bus/bus-v10-bg1.png"
                    }
                },
                methods: {
                    nextUrl: function (index) {
                        if (this.listImage.length == (index + 1)) {
                            this.active = {
                                index: 0,
                                url: this.listImage[0]
                            }
                        } else {
                            this.active = {
                                index: index + 1,
                                url: this.listImage[index + 1]
                            }
                        }
                    },
                    lastUrl: function (index) {
                        if (index == 0) {
                            this.active = {
                                index: this.listImage.length - 1,
                                url: this.listImage[this.listImage.length - 1]
                            }
