        script.
            $(document).ready(function () {
                $(window).scroll(function () {
                    animate();
                })

                //联系我们页面滚动到指定位置
                if ($(window).width() >= 768) {
                    if (getUrlParam('cantrat')) {
                        click_scroll('cantrat');
                    }
                }
            })

            //页面滚动处理
            function animate() {
                //楼层2
                if ($(window).scrollTop() >= 1919) {
                    $(".sm3-city").addClass('sm3-city-move');
                }
                //楼层五
                if ($(window).scrollTop() >= 3564) {
                    $(".ver5-img").addClass('ver5-img-active');
                }
            }

            //楼层4，大图动态切换
            (function () {
                var silderIndex = 1;
                setInterval(function () {
                    $(".bus-con4 .slider").removeClass('active');
                    $(".con-ft-sm4 .data-img").removeClass('img-native');

                    $("#big-version4-" + silderIndex).addClass("img-native")
                    $(".slider-" + silderIndex).addClass("active");

                    silderIndex++;
                    if (silderIndex == 4) {
                        silderIndex = 1;
                    }
                }, 3000);
                $(".con-ft-sm4").on("click", 'img', function () {
                    $(".bus-con4 .slider").removeClass('active');
                    $(".con-ft-sm4 .data-img").removeClass('img-native');
                    $(this).addClass("img-native");
                    var id = $(this)[0].id.charAt($(this)[0].id.length - 1);
                    silderIndex = id;
                    $(".slider-" + id).addClass("active");
                })
            }());

            //楼层7，自动图标切换和鼠标移动效果
            (function () {
                var circleIndex = 1;
                var timeLong = 1500;
                var circleTime = setInterval(function () {
                    circleTimeFun();
                }, timeLong);

                function circleTimeFun() {
                    var circleItem = ".circleIndex" + circleIndex + " span";
                    clearItem();

                    $(circleItem).css("opacity", '1');
                    var imgItem = $(circleItem).next();
                    var imgUrl = imgItem.css("background-image");
                    imgItem.css("background-image", '');
                    imgItem.css("background-image", imgUrl.replace("2.png", "1.png"));

                    circleIndex++;
                    if (circleIndex == 6) {
                        circleIndex = 1;
                    }
                }

                $('.bg-img').mouseenter(function () {
                    clearInterval(circleTime);
                    //清除
                    clearItem();
                    //变化
                    var imgUrl = $(this).css("background-image");
                    $(this).css("background-image", '');
                    $(this).css("background-image", imgUrl.replace("2.png", "1.png"));
                    $(this).prev().css("opacity", '1');
                })

                $('.bg-img').mouseleave(function () {
                    circleTime = setInterval(function () {
                        circleTimeFun();
                    }, timeLong);
                })
                
                function clearItem() {
                    $(".sm7-bl span").css("opacity", '0');
                    var bgImgObjArr = $(".bg-img");
                    for (var i = 0, len = bgImgObjArr.length; i < len; i++) {
                        var itemObj = $(bgImgObjArr[i]);
                        itemObj.css("background-image", '');
                        $(bgImgObjArr[i]).css("background-image", itemObj.css("background-image").replace("1.png", "2.png"));
                    }
                }
            }());

            //楼层14，表单处理
            $(".con-ft-sm14").on("click", '.form-submit', function () {
                var formName = $("#formName").val();
                var formTel = $("#formTel").val();
                var formView = $("#formView").val();
                var re = /(^0{0,1}1[3|4|5|6|7|8|9][0-9]{9}$)/;
                if (!formName) {
                    alert("姓名不能为空哦！");
                    return
                }
                if (!re.test(formTel)) {
                    alert("手机号码格式错误！");
                    return
                }
                if (!formView) {
                    alert("意向区域还没有填写！");
                    return
                }

                $.ajax({
                    url: 'http://cloud.globalvillage.biz/airmapOper/merchant/add',
                    type: 'post',
                    data: {
                        merchantName: formName,
                        merchantArea: formTel,
                        merchantPhone: formView
                    },
                    dataType: 'json',
                    success: function (listObj) {
                        if (listObj.code == 0) {
                            alert("登记成功！");
                        } else {
                            alert(listObj.msg);
                        }
                    },
                    error: function () {
                    }
                })
            })
