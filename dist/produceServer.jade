                        url: "./images/produceServer/pro-v5-1.png",
                        text: "我的城市空气我知道1"
                    }
                },
                methods: {
                    rightArraw: function () {
                        this.listImage.unshift(this.listImage.pop());
                    },
                    leftArraw: function () {
                        this.listImage.push(this.listImage.shift());
                    }
                }
            })