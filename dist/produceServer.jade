        script.
            $(".con-arraw").mouseenter(function () {
                $(this).attr("src", "./images/bus/bus-v8-2.png");
            })
            $(".con-arraw").mouseout(function () {
                $(this).attr("src", "./images/bus/bus-v8-1.png");
            })
            $(".con-arraw-con5").mouseenter(function () {
                $(this).attr("src", "./images/produceServer/pro-v5-left-true.png");
            })
            $(".con-arraw-con5").mouseout(function () {
                $(this).attr("src", "./images/produceServer/pro-v5-left.png");
            })
            new Vue({
                el: ".con11-back",
                data: {
                    listImage: [
                        "./images/produceServer/pro-v11-2.jpg",
                        "./images/produceServer/pro-v11-1.jpg",
                    ],
                    active: {
                        index: 0,
                        url: "./images/produceServer/pro-v11-2.jpg"
                    }
                },
                methods: {
                    nextUrl: function (index) {
                        if (this.listImage.length == (index + 1)) {
                            this.active = {
                                index: 0,
                                url: this.listImage[0]
                            }
                        } else {
                            this.active = {
                                index: index + 1,
                                url: this.listImage[index + 1]
                            }
                        }
                    },
                    lastUrl: function (index) {
                        if (index == 0) {
                            this.active = {
                                index: this.listImage.length - 1,
                                url: this.listImage[this.listImage.length - 1]
                            }
                        } else {
                            this.active = {
                                index: index - 1,
                                url: this.listImage[index - 1]
                            }
                        }
                    }
                }
            })
            new Vue({
                el: ".school-con5",
                data: {
                    listImage: [
                        {
