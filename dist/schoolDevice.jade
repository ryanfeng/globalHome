        script.
            var canvasTime;
            //圆弧
            function canvasCircle(num) {
                if (!canvasTime) {
                    var canvas = document.getElementById("myCanvas");
                    var ctx = canvas.getContext("2d");
                    ctx.translate(1, 1);
                    var radius = 0.00
                    canvasTime = setInterval(function () {
                        if (Math.round(radius * 100) < 10) {
                            radius = radius + 0.005;
                        } else {
                            radius = radius + 0.01;
                        }
                        ctx.beginPath();
                        ctx.arc(140, 140, 114, 0, radius * Math.PI);
                        ctx.lineWidth = 48.5;
                        ctx.strokeStyle = "#00AFD8";
                        ctx.stroke();
                        $(".sm3-right-num").html(Math.round(radius * 100 / 2));
                        if (Math.round(radius * 100) == num * 2) {
                            clearInterval(canvasTime);
                        }
                    }, 30)
                }
